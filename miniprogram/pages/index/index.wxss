.header-area{
  height: 100rpx;
  background: #f7eaeb;
  display: flex;
  flex-direction: row;
  margin: 20rpx;
  border-radius: 10rpx;
  /* box-shadow: 3px 3px 4px #abafaa; */
  justify-content: space-between;
  align-items: center;
  padding:0rpx 10rpx;
  color:#f84052;
}
.right-area{
  display: flex;
  width: 90px;
  justify-content: space-around;
  
}
.search-bar>text{
  font-size: 24px;
}
.note{
  padding-left: 8px;
}
.shezhi>text{
  font-size: 24px;
}
.main-area{
  display: flex;
  flex-direction: column;
  align-items: center;
  margin-top: 50rpx;
}
.main-area>view{
  line-height: 30px;
  margin-top: 10px;
  color: #999;
  font-size: 16px;
}
.blank{
  border-radius: 10px;
  /* box-shadow:  4px 1px 1px  3px #999; */
}

/* 内容区域 */
.area{
  margin: 20rpx;
}
.date{
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #666;
  font-size: 14px
}

.note-pan{
  display: flex;
  flex-direction: column;
  border: 1px solid #ccc;
  padding: 20rpx;
  border-radius: 20rpx;
  box-shadow: 2px 3px 5px #cccc;
}
.pan-top{
  display: flex;
  flex-direction: row;
  justify-content: space-between;
  margin-bottom: 20rpx;
}
.pan-left{
  display: flex;
  flex-direction: row;  
}
.time{
  margin-right: 20rpx;
}

.pan-bottom{
  color:#444;
  font-family: "黑体";
  font-size: 14px;
  line-height: 20px;
  letter-spacing: 1px;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient:vertical;
  flex-direction: column;
}
.icon-color{
  color: #f84052;
}
.icon-color1{
  color: #ccc;
}
.note-list{
  margin-bottom: 20px;
}
.date{
  margin-left: 20rpx;
}
.icon-shoucang{
  padding: 10rpx;
}
